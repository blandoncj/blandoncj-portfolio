---
import { Briefcase, Calendar, MapPin } from "lucide-astro";

import { experience } from "../data/experience.ts";
---

<section
  id="experience"
  class="min-h-screen snap-start snap-always flex items-center justify-center px-8 py-20 relative"
>
  <div class="max-w-4xl mx-auto w-full">
    <div class="mb-24 text-center space-y-4">
      <h2
        class="font-bold text-6xl md:text-7xl bg-gradient-to-r from-white via-gray-200 to-gray-400 bg-clip-text text-transparent"
      >
        Experience
      </h2>
      <p class="text-gray-500 text-lg">Building real-world solutions</p>
    </div>

    {
      experience.map((exp, index) => (
        <div class="relative group bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 md:p-10 hover:border-white/30 transition-all duration-500 mb-12">
          <div class="absolute -inset-1 bg-gradient-to-r from-purple-500/20 to-blue-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10" />
          <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-6">
            <div class="flex-1">
              <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">
                {exp.position}
              </h3>
              <p class="text-xl text-gray-300 mb-1">{exp.company}</p>
            </div>
          </div>

          <div class="flex flex-wrap gap-x-6 gap-y-3 mb-6 text-gray-400 text-sm">
            <div class="flex items-center gap-2">
              <Calendar size={16} />
              <span>
                {exp.period} Â· <span data-duration data-start={exp.startDate.getTime()} data-end={exp.endDate?.getTime() || ''}>Loading...</span>
              </span>
            </div>
          </div>

          <p class="text-gray-300 leading-relaxed mb-6">{exp.description}</p>

          <div class="flex flex-wrap gap-2">
            {exp.technologies.map((tech) => (
              <span class="px-3 py-1.5 bg-white/5 border border-white/10 rounded-lg text-sm text-gray-400 hover:bg-white/10 hover:border-white/20 hover:text-white transition-all duration-200">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))
    }

    <div class="mt-16 text-center">
      <div
        class="h-px w-32 bg-gradient-to-r from-transparent via-white/20 to-transparent mx-auto mb-6"
      >
      </div>
      <p class="text-gray-500 text-sm">
        Open to new opportunities and challenges
      </p>
    </div>
  </div>

  <a
    href="#projects"
    class="absolute bottom-8 left-1/2 -translate-x-1/2 text-gray-400 hover:text-white transition-all duration-300 animate-bounce"
    aria-label="Scroll to next section"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="32"
      height="32"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </a>
</section>

<script>
  function calculateDuration(startDate: Date, endDate: Date | null): string {
    const end = endDate || new Date();

    const months = (end.getFullYear() - startDate.getFullYear()) * 12
      + (end.getMonth() - startDate.getMonth());

    if (months < 1) {
      return 'Less than a month';
    }

    const years = Math.floor(months / 12);
    const remainingMonths = months % 12;

    if (years === 0) {
      return `${remainingMonths} ${remainingMonths === 1 ? 'month' : 'months'}`;
    } else if (remainingMonths === 0) {
      return `${years} ${years === 1 ? 'year' : 'years'}`;
    } else {
      return `${years} ${years === 1 ? 'year' : 'years'} and ${remainingMonths} ${remainingMonths === 1 ? 'month' : 'months'}`;
    }
  }

  // Calculate durations on the client side
  document.addEventListener('DOMContentLoaded', () => {
    const durationElements = document.querySelectorAll('[data-duration]');

    durationElements.forEach((element) => {
      const startTime = parseInt(element.getAttribute('data-start') || '0');
      const endTime = element.getAttribute('data-end');

      const startDate = new Date(startTime);
      const endDate = endTime ? new Date(parseInt(endTime)) : null;

      element.textContent = calculateDuration(startDate, endDate);
    });
  });
</script>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  section > div > div:nth-child(2) {
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0.2s;
    opacity: 0;
  }
</style>
