---
import { Github, ExternalLink, Image as ImageIcon } from 'lucide-astro';

import { projects } from '../data/projects.ts';
---

<section id="projects" class="min-h-screen snap-start snap-always flex items-center justify-center px-8 py-20 relative">
  <div class="max-w-6xl mx-auto w-full">
    
    <div class="mb-24 text-center space-y-4">
      <h2 class="font-bold text-6xl md:text-7xl bg-gradient-to-r from-white via-gray-200 to-gray-400 bg-clip-text text-transparent">
        Projects
      </h2>
      <p class="text-gray-500 text-lg">
        Building scalable and secure applications
      </p>
    </div>

    <div class="space-y-8">
      {projects.map((project, index) => (
        <div class="group relative">
          <!-- Glow effect -->
          <div class="absolute -inset-1 bg-gradient-to-r from-purple-500/20 to-blue-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="relative bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl overflow-hidden hover:border-white/30 transition-all duration-500">
            <div class={`grid ${project.imagePath ? 'md:grid-cols-2' : 'md:grid-cols-1'} gap-0`}>
              
              {project.imagePath && (
                <div class="relative h-64 md:h-full bg-gradient-to-br from-purple-500/10 to-blue-500/10 overflow-hidden">
                  <img 
                    src={project.imagePath} 
                    alt={project.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent md:bg-gradient-to-r"></div>
                </div>
              )}

              <div class="p-8 md:p-10 flex flex-col justify-between">
                <div>
                  <h3 class="text-2xl md:text-3xl font-bold text-white mb-4 group-hover:text-transparent group-hover:bg-gradient-to-r group-hover:from-purple-400 group-hover:to-blue-400 group-hover:bg-clip-text transition-all duration-300">
                    {project.title}
                  </h3>
                  
                  <p class="text-gray-300 leading-relaxed mb-6">
                    {project.description}
                  </p>

                  <div class="flex flex-wrap gap-2 mb-6">
                    {project.technologies.map((tech) => (
                      <span class="px-3 py-1.5 bg-white/5 border border-white/10 rounded-lg text-sm text-gray-400 hover:bg-white/10 hover:border-white/20 hover:text-white transition-all duration-200">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>

                <div class="flex gap-4">
                  <a 
                    href={project.githubLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 px-4 py-2 bg-white/5 border border-white/20 rounded-lg hover:bg-white/10 hover:border-white/40 transition-all duration-300 group/btn"
                  >
                    <Github size={18} class="group-hover/btn:scale-110 transition-transform duration-300" />
                    <span class="text-sm font-medium">View Code</span>
                  </a>
                  
                  {project.demo && (
                    <a 
                      href={project.demo}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-purple-500/20 to-blue-500/20 border border-purple-500/30 rounded-lg hover:from-purple-500/30 hover:to-blue-500/30 hover:border-purple-500/50 transition-all duration-300 group/btn"
                    >
                      <ExternalLink size={18} class="group-hover/btn:scale-110 transition-transform duration-300" />
                      <span class="text-sm font-medium">Live Demo</span>
                    </a>
                  )}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <div class="h-px w-32 bg-gradient-to-r from-transparent via-white/20 to-transparent mx-auto mb-6"></div>
      <a 
        href="https://github.com/blandoncj"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors duration-300 group"
      >
        <span class="text-sm">View more projects on GitHub</span>
        <ExternalLink size={16} class="group-hover:translate-x-1 transition-transform duration-300" />
      </a>
    </div>
  </div>

  <a 
    href="#contact"
    class="absolute bottom-8 left-1/2 -translate-x-1/2 text-gray-400 hover:text-white transition-all duration-300 animate-bounce"
    aria-label="Scroll to next section"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </a>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  section > div > div:nth-child(2) > div {
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    opacity: 0;
  }

  section > div > div:nth-child(2) > div:nth-child(1) { animation-delay: 0.1s; }
  section > div > div:nth-child(2) > div:nth-child(2) { animation-delay: 0.3s; }
  section > div > div:nth-child(2) > div:nth-child(3) { animation-delay: 0.5s; }
</style>
