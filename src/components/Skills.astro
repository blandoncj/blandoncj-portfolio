---
import { skills } from "../data/skills";
---

<section
  id="skills"
  class="min-h-screen snap-start snap-always flex items-center justify-center px-8 py-20 relative"
>
  <div class="max-w-6xl mx-auto w-full">
    <div class="mb-24 text-center space-y-4">
      <h2
        class="font-bold text-6xl md:text-7xl bg-gradient-to-r from-white via-gray-200 to-gray-400 bg-clip-text text-transparent"
      >
        Tech Stack
      </h2>
      <p class="text-gray-500 text-lg">
        Building scalable solutions with modern technologies
      </p>
    </div>

    <div
      class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-12 md:gap-16 lg:gap-20 place-items-center"
    >
      {
        skills.map((skill) => (
          <div class="group flex flex-col items-center gap-4 cursor-default">
            <div class="relative">
              <div class="absolute inset-0 bg-gradient-to-r from-purple-500/20 to-blue-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500" />

              <div class="relative w-20 h-20 md:w-24 md:h-24 flex items-center justify-center rounded-2xl bg-white/5 backdrop-blur-sm border border-white/10 group-hover:border-white/30 group-hover:bg-white/10 transition-all duration-500 p-4 group-hover:scale-110 group-hover:rotate-3">
                <img
                  src={skill.icon}
                  alt={skill.name}
                  class="w-full h-full object-contain filter grayscale group-hover:grayscale-0 transition-all duration-500"
                  loading="lazy"
                />
              </div>
            </div>

            <span class="text-sm md:text-base text-gray-500 group-hover:text-white transition-colors duration-300 text-center font-medium">
              {skill.name}
            </span>
          </div>
        ))
      }
    </div>

    <div class="mt-32 flex flex-col items-center gap-6">
      <div
        class="h-px w-32 bg-gradient-to-r from-transparent via-white/20 to-transparent"
      >
      </div>
      <div
        class="flex flex-wrap justify-center gap-x-6 gap-y-3 text-gray-500 text-sm md:text-base"
      >
        <span
          class="hover:text-white transition-colors duration-300 cursor-default"
          >Clean Architecture</span
        >
        <span class="text-gray-700">•</span>
        <span
          class="hover:text-white transition-colors duration-300 cursor-default"
          >SOLID Principles</span
        >
        <span class="text-gray-700">•</span>
        <span
          class="hover:text-white transition-colors duration-300 cursor-default"
          >Design Patterns</span
        >
      </div>
    </div>
  </div>

  <a
    href="#experience"
    class="absolute bottom-8 left-1/2 -translate-x-1/2 text-gray-400 hover:text-white transition-all duration-300 animate-bounce"
    aria-label="Scroll to next section"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="32"
      height="32"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </a>
</section>

<style>
  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9) translateY(10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  section > div > div:nth-child(2) > div {
    animation: fadeInScale 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    opacity: 0;
  }

  section > div > div:nth-child(2) > div:nth-child(1) {
    animation-delay: 0.1s;
  }
  section > div > div:nth-child(2) > div:nth-child(2) {
    animation-delay: 0.15s;
  }
  section > div > div:nth-child(2) > div:nth-child(3) {
    animation-delay: 0.2s;
  }
  section > div > div:nth-child(2) > div:nth-child(4) {
    animation-delay: 0.25s;
  }
  section > div > div:nth-child(2) > div:nth-child(5) {
    animation-delay: 0.3s;
  }
  section > div > div:nth-child(2) > div:nth-child(6) {
    animation-delay: 0.35s;
  }
  section > div > div:nth-child(2) > div:nth-child(7) {
    animation-delay: 0.4s;
  }
  section > div > div:nth-child(2) > div:nth-child(8) {
    animation-delay: 0.45s;
  }
  section > div > div:nth-child(2) > div:nth-child(9) {
    animation-delay: 0.5s;
  }
  section > div > div:nth-child(2) > div:nth-child(10) {
    animation-delay: 0.55s;
  }
</style>
